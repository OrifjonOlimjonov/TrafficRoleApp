<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ItemInfoFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#005CA1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Shlagbaumli temir yo'l kesishmasi"
        app:titleTextColor="@color/white" />
    <ImageView
        android:id="@+id/imgSysmbol"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/placeholde"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tvTheme"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_100sdp"/>

    <TextView
        android:id="@+id/tvTheme"
        app:layout_constraintTop_toBottomOf="@id/imgSysmbol"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="sdadsa"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toTopOf="@id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvInfo"
        app:layout_constraintTop_toBottomOf="@id/tvTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_12ssp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="dasdw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>